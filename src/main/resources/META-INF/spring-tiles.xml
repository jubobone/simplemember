<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- Default Main Template -->
	<definition name=".mainTemplate" template="/WEB-INF/jsp/layout/template.jsp">
		<put-attribute name="title" value="Main" type="string" />
		<put-attribute name="header" value="/WEB-INF/jsp/layout/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jsp" />
		<put-attribute name="body" value="/WEB-INF/jsp/layout/blank.jsp" />
	</definition>
	<definition name="member" extends=".mainTemplate">
		<put-attribute name="title" value="Member" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/member.jsp" />
	</definition>
	<definition name="register" extends=".mainTemplate">
		<put-attribute name="title" value="Register page" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/register.jsp" />
	</definition>
	<definition name="edit" extends=".mainTemplate">
		<put-attribute name="title" value="Update member data"
			type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/edit.jsp" />
	</definition>
	<definition name="login" extends=".mainTemplate">
		<put-attribute name="title" value="Loging page" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/login.jsp" />
	</definition>
	<definition name="show" extends=".mainTemplate">
		<put-attribute name="title" value="Member" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/show.jsp" />
	</definition>
</tiles-definitions>